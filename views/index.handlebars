    </nav>
  <header class="py-5">
    <div class="d-flex justify-content-center">
      <a href="/" id="logo">Burger!</a>
    </div>



  </header>
  <section class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-sm-4 sub-heading">
          <a class="mb-3" href="/">Waiting to be devoured!</a>
          <ul class="burger-list">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        <div class="col-sm-4 sub-heading-notext">
          {{!-- Carousel --}}
          <div id="carouselBurgerControls" class="carousel slide d-flex justify-content-center" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100 rounded" src="/assets/images/burger-seating-area.png" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 rounded" src="/assets/images/burger-with-fries.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 rounded" src="/assets/images/burgers.jpg" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselBurgerControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselBurgerControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="col-sm-4 sub-heading">
          <a class="mb-3" href="/">Devoured!</a>

          <ul class="burger-list">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>
  </section>
  <section id="order" class="py-5">
    <div class="container">
      <h1 class="sub-lead">Enter the names of burgers they'd like to eat</h1>
      <div class="row">
        <div class="col-sm-12 d-inline-flex p-2 bd-highlight justify-content-center">
          <form class="create-form  justify-content-center">
            <div class="form-group ">
              <input id="burger" class="form-control form-control-lg mb-3" type="text" placeholder="Burger Name">
            </div>
            <button type="submit" class="burger-form btn btn-outline-dark">Order!</button>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>


